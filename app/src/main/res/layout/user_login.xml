<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/image24"
    android:backgroundTintMode="screen"
    android:id="@+id/login_layout"
    android:backgroundTint="@color/material_deep_teal_200"
    android:clickable="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="12dp"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center_horizontal"/>

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_centerInParent="true"
           android:padding="12dp">
           <android.support.design.widget.TextInputLayout
               android:id="@+id/tilEmail"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:layout_marginBottom="8dp"
               app:hintAnimationEnabled="true"
               android:background="@color/accent_material_light">
               <EditText
                   android:id="@+id/etuserAdm"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="8dp"
                   android:translationY="5dp"
                   android:layout_marginBottom="8dp"
                   android:hint="Admission Number"
                   android:textColorHint="#FFFFFF"
                   android:textColor="#FFFFFF"
                   android:singleLine="true"
                   android:inputType="textEmailAddress"
                   android:focusableInTouchMode="true"
                   android:editable="true">
               </EditText>
           </android.support.design.widget.TextInputLayout>

           <android.support.design.widget.TextInputLayout
               android:id="@+id/tilPin"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="8dp"
               app:hintAnimationEnabled="true">
               <EditText
                   android:id="@+id/etusePasskey"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="8dp"
                   android:layout_marginBottom="8dp"
                   android:translationY="5dp"
                   android:hint="User Passkey"
                   android:singleLine="true"
                   android:inputType="numberPassword"
                   android:focusableInTouchMode="true"
                   android:textColor="#FFFFFF"
                   android:password="true"
                   android:background="@color/accent_material_light" />
           </android.support.design.widget.TextInputLayout>
       </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="login"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnmewUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="New User"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnforgotpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Forgot credentials"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/image16"
        android:backgroundTint="@color/accent_material_dark">

        <Button
            android:id="@+id/btnhelp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Help"
            />
        <Button
            android:id="@+id/btnexit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exit"/>
    </LinearLayout>


</RelativeLayout>